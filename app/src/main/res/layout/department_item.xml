<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:background="@drawable/linearbackground"
    android:gravity="center">

<com.example.hossam.boshraapp.Helpers.CircleImageView
    android:id="@+id/departmentimage"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
    android:src="@drawable/depart1"
    />

    <TextView
        android:id="@+id/departmerntname"
        android:layout_width="150dp"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="قسم جراحة المسالك البولية"
        />

</LinearLayout>