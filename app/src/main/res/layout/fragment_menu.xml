<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="20dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="250dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/mainpageimage" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/profilelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginStart="10dp"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="@dimen/menuimg_height"
                    android:layout_height="@dimen/menuimg_width"
                    android:src="@drawable/profile"/>
                <TextView
                    android:id="@+id/prf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/menu_text"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text="@string/menu_profile"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:background="@color/gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/medicalsub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="@dimen/menuimg_height"
                        android:layout_height="@dimen/menuimg_width"
                        android:src="@drawable/medical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/menu_text"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:text="@string/medicalsub"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:background="@color/gray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/experment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="@dimen/menuimg_height"
                        android:layout_height="@dimen/menuimg_width"
                        android:src="@drawable/massage"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/menu_text"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:text="@string/boshraexp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:background="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="@dimen/menuimg_height"
                        android:layout_height="@dimen/menuimg_width"
                        android:src="@drawable/lougin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/menu_text"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:text="@string/login"/>
                </LinearLayout>

                <View
                    android:id="@+id/lognview"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="@dimen/menuimg_height"
                        android:layout_height="@dimen/menuimg_width"
                        android:src="@drawable/lougout"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/menu_text"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:text="@string/menlogout"/>

                </LinearLayout>

                <View
                    android:id="@+id/logoutview"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:background="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="@dimen/menuimg_height"
                        android:layout_height="@dimen/menuimg_width"
                        android:src="@drawable/language"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/menu_text"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:text="@string/menu_language"/>
                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
