<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layoutDirection="rtl"
    android:background="@drawable/linearbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="5">




        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:gravity="start"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/sehs"
                android:textSize="18dp"
                android:textColor="#2142ba"/>

            <TextView
                android:id="@+id/titledescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:layout_constraintHorizontal_weight="0.5"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="bold"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:text="سن اليأس :  متي يبدا وماذا يحدث في الجسم؟"
                android:textSize="16dp"
                android:gravity="start"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="3dp"
                android:gravity="start"
                android:maxLines="3"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titledescription"
                android:text="سن اليأس :  متي يبدا وماذا يحدث في الجسمسن اليأس :  متي يبدا وماذا يحدث في الجسمسن اليأس :  متي يبدا وماذا يحدث في الجسمسن اليأس :  متي يبدا وماذا يحدث في الجسم"
                android:textSize="12dp"
                android:textColor="#a0a1ab"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description">

                <TextView
                    android:id="@+id/postdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginRight="9dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="17 يوليو 2018"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#6e7079"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="9dp" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/menuq"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/upload"
                    android:layout_toEndOf="@+id/menuq"
                    android:layout_marginStart="30dp" />

                <ImageView
                    android:id="@+id/menuq"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/save"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/postimage"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_height="170dp"
            android:background="@drawable/imageback"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>



</LinearLayout>